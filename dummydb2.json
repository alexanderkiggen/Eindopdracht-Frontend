{
  "collections": [
    {
      "name": "users",
      "fields": [
        { "name": "id", "type": "number", "required": true },
        { "name": "email", "type": "string", "required": true, "min": 5, "max": 254 },
        { "name": "password", "type": "password", "required": true, "min": 6, "max": 200 },
        { "name": "roles", "type": "array:string", "required": true }
      ],
      "permissions": {
        "GET": ["admin"],
        "POST": ["anonymous","admin"],
        "PUT": ["admin"],
        "PATCH": ["admin"],
        "DELETE": ["admin"]
      }
    },
    {
      "name": "favorites",
      "fields": [
        { "name": "id", "type": "number", "required": true },
        { "name": "userId", "type": "reference:users", "required": true },
        { "name": "gameId", "type": "number", "required": true },
        { "name": "slug", "type": "string", "required": true },
        { "name": "createdAt", "type": "date", "required": false, "default": "CurrentDate" }
      ],
      "permissions": {
        "GET": ["user","admin"],
        "POST": ["user", "admin"],
        "DELETE": ["user","admin"]
      }
    }
  ],

  "users": [
